<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_recordview_Album"
        app:layout_constraintLeft_toLeftOf="@id/iv_recordview_disc"
        app:layout_constraintRight_toRightOf="@id/iv_recordview_disc"
        app:layout_constraintTop_toTopOf="@id/iv_recordview_disc"
        app:layout_constraintBottom_toBottomOf="@id/iv_recordview_disc"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_height="0dp"/>
    <ImageView
        android:id="@+id/iv_recordview_disc"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.75"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/ic_recordview_disc"/>
</androidx.constraintlayout.widget.ConstraintLayout>