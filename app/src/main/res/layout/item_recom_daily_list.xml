<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <ImageView
        android:id="@+id/iv_music_cover"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.13"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <LinearLayout
        android:id="@+id/ll_music_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        app:layout_constraintWidth_percent="0.6"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintLeft_toRightOf="@id/iv_music_cover"
        app:layout_constraintTop_toTopOf="@id/iv_music_cover"
        app:layout_constraintBottom_toTopOf="@id/ll_other_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_music_name"
            android:text="Vever Over"
            android:textColor="#000"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_music_alias"
            android:text="(Vever Over)"
            android:textColor="#999"
            android:textSize="15sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_other_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/ll_music_name"
        app:layout_constraintTop_toBottomOf="@id/ll_music_name"
        app:layout_constraintBottom_toBottomOf="@id/iv_music_cover"
        app:layout_constraintWidth_percent="0.6"
        android:layout_marginTop="8dp">
        <ImageView
            android:id="@+id/iv_sole_icon"
            android:layout_width="16dp"
            android:layout_height="11dp"
            android:layout_marginRight="3dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ic_sole_small_icon"/>
        <ImageView
            android:id="@+id/iv_sq_icon"
            android:layout_width="14dp"
            android:layout_height="11dp"
            android:layout_marginRight="3dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ic_sq_small_icon"/>
        <TextView
            android:id="@+id/tv_music_singer"
            android:text="王巨星-太阳（完整版）"
            android:textColor="#888"
            android:textSize="10sp"
            android:includeFontPadding="false"
            android:layout_gravity="center_vertical"
            app:layout_constraintLeft_toRightOf="@id/iv_sq_icon"
            app:layout_constraintTop_toBottomOf="@id/tv_music_name"
            app:layout_constraintBottom_toBottomOf="@id/iv_music_cover"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/iv_daily_list_tag_mv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintWidth_percent="0.1"
        android:layout_marginRight="6dp"
        android:src="@mipmap/ic_daily_list_tag_mv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/iv_daily_list_icn_more"/>
    <ImageView
        android:id="@+id/iv_daily_list_icn_more"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintWidth_percent="0.08"
        android:src="@mipmap/ic_daily_list_more"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>