<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageSwitcher
        android:id="@+id/imageSwitcher"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <ImageView
        android:visibility="visible"
        android:id="@+id/iv_playmusic_cover_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#5000"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/need_margin_top_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/actionBarLine"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintGuide_begin="?attr/actionBarSize"/>
        <ImageView
            android:id="@+id/ib_goback_btn"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:onClick="onBackBtnClick"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/actionBarLine"
            android:layout_marginLeft="@dimen/content_distance"
            android:src="@mipmap/ic_back_btn"/>
        <TextView
            android:id="@+id/tv_playmusic_songName"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            tools:text="我想念"
            android:maxLines="1"
            android:ellipsize="end"
            android:textAlignment="center"
            android:textColor="#fff"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintBottom_toTopOf="@id/tv_playmusic_songAuthor"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/tv_playmusic_songAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/tv_playmusic_songName"
            app:layout_constraintRight_toRightOf="@id/tv_playmusic_songName"
            app:layout_constraintTop_toBottomOf="@id/tv_playmusic_songName"
            app:layout_constraintBottom_toBottomOf="@id/actionBarLine"
            android:textColor="#dcdcdc"
            android:textAlignment="center"
            android:textSize="14sp"
            tools:text="金志文"/>
        <ImageView
            android:id="@+id/iv_arrow"
            app:layout_constraintLeft_toRightOf="@id/tv_playmusic_songAuthor"
            app:layout_constraintTop_toTopOf="@id/tv_playmusic_songAuthor"
            app:layout_constraintBottom_toBottomOf="@id/tv_playmusic_songAuthor"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:alpha="0.9"
            android:src="@drawable/ic_playing_author_more"
            />
        <androidx.constraintlayout.widget.Group
            android:id="@+id/g_playmusic_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="tv_playmusic_songAuthor,tv_playmusic_songName,iv_arrow"/>
        <cn.kalac.hearing.view.RecordView
            app:layout_constraintTop_toBottomOf="@id/actionBarLine"
            android:id="@+id/Rv_playmusic_RecordView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </cn.kalac.hearing.view.RecordView>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical">

            <ImageView

                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_playing_unlike_selector"/>

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_playing_download_selector"/>

            <ImageView

                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_playing_comments_selector"/>

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_playing_more_selector"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/tv_playmusic_currentTime"
                android:textColor="#eee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"/>
            <SeekBar
                android:layout_weight="10"
                android:id="@+id/sb_playmusic_playProgress"
                android:layout_width="0dp"
                android:maxHeight="2dp"
                android:thumb="@drawable/ic_playing_seekbar_thumb"
                android:progressDrawable="@drawable/ic_playing_seekbar_background"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#eee"
                android:id="@+id/tv_playmusic_totalTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"/>
        </LinearLayout>


        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_playing_bar_repeat_listloop_selector"/>

            <ImageView
                android:id="@+id/iv_playmusic_prevbtn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_playing_bar_prev_selector"/>

            <ImageView
                android:id="@+id/iv_playmusic_playbtn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_playing_bar_play_selector"/>

            <ImageView
                android:id="@+id/iv_playmusic_nextbtn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_playing_bar_next_selector"/>

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_playing_bar_list_selector"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
