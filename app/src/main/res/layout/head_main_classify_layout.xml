<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="80dp" />
        <cn.kalac.hearing.view.WrapContentHeightViewPager
            android:id="@+id/vp_main_banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </cn.kalac.hearing.view.WrapContentHeightViewPager>

    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="13dp"
        android:layout_marginBottom="13dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                style="@style/MainDragonballStyle"
                android:src="@drawable/layer_list_dragonball_fm_btn"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/MainDragonbalTestlStyle"
                android:text="@string/privatefm"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn_getList"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    style="@style/MainDragonballStyle"
                    android:src="@drawable/layer_list_dragonball_daily_btn"/>
                <TextView
                    android:id="@+id/tv_main_daily"
                    android:layout_marginTop="19dp"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textColor="#fff"
                    android:textSize="12sp"
                    android:text="10"/>
            </RelativeLayout>

            <TextView
                style="@style/MainDragonbalTestlStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dailyrecom"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                style="@style/MainDragonballStyle"
                android:src="@drawable/layer_list_dragonball_playlist_btn"/>
            <TextView
                style="@style/MainDragonbalTestlStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/songlist"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                style="@style/MainDragonballStyle"
                android:src="@drawable/layer_list_dragonball_rank_btn"/>
            <TextView
                style="@style/MainDragonbalTestlStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rank"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="#DFDCDC"/>
</LinearLayout>