<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingPrefix">
    <cn.kalac.hearing.view.DailyPagerTopView
        app:layout_behavior=".widget.behavier.DailyHeaderBehavior"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>
    <TextView
        android:id="@+id/tv_bar_title"
        android:text="@string/recom_daily"
        android:textColor="#fff"
        android:textSize="20sp"
        android:includeFontPadding="false"
        android:gravity="center"
        android:layout_width="match_parent"
        app:layout_behavior=".widget.behavier.DailyTitleAlphaBehavior"
        android:layout_height="?attr/actionBarSize"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        tools:background="#fff"
        android:id="@+id/cl_daily_list_core"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:bl_solid_color="#fff"
        app:bl_corners_topRightRadius="25dp"
        app:bl_corners_topLeftRadius="25dp"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:paddingTop="18dp"
        app:layout_behavior=".widget.behavier.RecyclerViewBehavior"
        >
        <ImageView
            android:id="@+id/iv_play_all"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@mipmap/ic_daily_play_all_btn"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintWidth_percent="0.070"/>
        <TextView
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="播放全部"
            android:textStyle="bold"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="@id/iv_play_all"
            app:layout_constraintBottom_toBottomOf="@id/iv_play_all"
            app:layout_constraintLeft_toRightOf="@id/iv_play_all"
            android:textColor="#000"/>
        <ImageView
            android:id="@+id/iv_play_multi_option"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginRight="2dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tv_play_multi_option"
            android:src="@mipmap/ic_daily_list_multi_btn"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintWidth_percent="0.05"/>
        <TextView
            android:id="@+id/tv_play_multi_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/iv_play_multi_option"
            app:layout_constraintBottom_toBottomOf="@id/iv_play_multi_option"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="14sp"
            android:textColor="#000"
            android:text="多选"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_daily_list"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@id/iv_play_all"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/v_ring_left"
        android:layout_width="10dp"
        android:layout_height="22dp"
        app:layout_behavior=".widget.behavier.RingViewBehavior" />

    <View
        android:id="@+id/v_ring_right"
        android:layout_width="10dp"
        android:layout_height="22dp"
        app:layout_behavior=".widget.behavier.RingViewBehavior" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <include layout="@layout/statusbarview_layout"/>
        <FrameLayout
            android:layout_marginLeft="18dp"
            android:layout_width="wrap_content"
            android:layout_height="?attr/actionBarSize">
            <ImageView
                android:onClick="onBackBtnClick"
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/ic_back_btn"/>
        </FrameLayout>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>