<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFC107"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingPrefix">
    <include layout="@layout/statusbarview_layout"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        tools:background="#fff"
        android:id="@+id/c"
        android:layout_width="match_parent"
        app:bl_solid_color="#fff"
        app:bl_corners_topRightRadius="25dp"
        app:bl_corners_topLeftRadius="25dp"
        app:layout_constraintHeight_percent="0.7"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="0dp"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:paddingTop="18dp"
        >
        <ImageView
            android:id="@+id/iv_play_all"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@mipmap/ic_daily_play_all_btn"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintWidth_percent="0.056"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="播放全部"
            android:textStyle="bold"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="@id/iv_play_all"
            app:layout_constraintBottom_toBottomOf="@id/iv_play_all"
            app:layout_constraintLeft_toRightOf="@id/iv_play_all"
            android:textColor="#000"/>
        <ImageView
            android:id="@+id/iv_play_multi_option"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginRight="2dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tv_play_multi_option"
            android:src="@mipmap/ic_daily_list_multi_btn"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintWidth_percent="0.05"/>
        <TextView
            android:id="@+id/tv_play_multi_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/iv_play_multi_option"
            app:layout_constraintBottom_toBottomOf="@id/iv_play_multi_option"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="14sp"
            android:textColor="#000"
            android:text="多选"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/v_ring_left"
        android:layout_width="10dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="10:22"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/c"
        app:layout_constraintBottom_toTopOf="@id/c"/>

    <View
        android:id="@+id/v_ring_right"
        android:layout_width="10dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="10:22"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/c"
        app:layout_constraintBottom_toTopOf="@id/c"/>
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/statusBarView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintWidth_percent="0.03"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        app:layout_constraintDimensionRatio="36:66"
        android:src="@mipmap/ic_back_btn"/>
</androidx.constraintlayout.widget.ConstraintLayout>